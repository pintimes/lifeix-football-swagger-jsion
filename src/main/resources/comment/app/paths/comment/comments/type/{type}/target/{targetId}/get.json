{
    "summary": "获取评论",
    "tags": 
    [
        "comments"
    ],

    "consumes": 
    [
        "application/json; charset=UTF-8"
    ],

    "produces": 
    [
        "application/json; charset=UTF-8"
    ],

    "description": "获取目标的评论列表",
    "parameters": 
    [
        {
            "$ref": "#/parameters/apiKeyYHeader"
        },
        {
            "$ref": "#/parameters/typePath"
        },
        {
            "$ref": "#/parameters/targetIdPath"
        },

        {
            "name": "limit",
            "in": "query",
            "format": "int32",
            "type": "integer",
            "description": "每页数目，默认是每页20条"
        },
        
        {
            "name": "date",
            "in": "query",
            "format": "date-time",
            "type": "string",
            "description": "如果查最新评论不传即可；如果是分页查询则需将前一页最后一条记录的时间传入，通过时间定位"
        }
    ],

    "responses": 
    {
        "200": 
        {
            "description": "Comment对象",
            "schema": 
            {
                "type": "array",
                "items": 
                {
                    "$ref": "#/definitions/Comment"
                }
            }
        }
    },

    "operationId": "getCommentsByTarget"
}