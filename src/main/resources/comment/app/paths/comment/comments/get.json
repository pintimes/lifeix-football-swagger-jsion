{
    "summary": "获取评论",
    "tags": 
    [
        "comments"
    ],

    "consumes": 
    [
        "application/json; charset=UTF-8"
    ],

    "produces": 
    [
        "application/json; charset=UTF-8"
    ],

    "description": "获取评论列表，默认按时间倒叙排列",
    "parameters": 
    [
        {
            "$ref": "#/parameters/apiKeyYHeader"
        },

        {
            "description": "主题类型",
            "name": "subjectType",
            "type": "string",
            "required": true,
            "in": "query"
        },

        {
            "description": "目标Id",
            "name": "subjecttId",
            "type": "string",
            "required": true,
            "in": "query"
        },

        {
            "name": "limit",
            "in": "query",
            "format": "int32",
            "type": "integer",
            "description": "每页数目，默认是每页20条"
        },

        {
            "name": "date",
            "in": "query",
            "format": "date-time",
            "type": "string",
            "description": "如果查最新评论不传即可；如果是分页查询则需将前一页最后一条记录的时间传入，通过时间定位"
        }
    ],

    "responses": 
    {
        "200": 
        {
            "description": "Comment对象",
            "schema": 
            {
                "type": "array",
                "items": 
                {
                    "$ref": "#/definitions/Comment"
                }
            }
        },

        "400": 
        {
            "schema": 
            {
                "$ref": "#/definitions/Error"
            },

            "description": "业务错误消息"
        },

        "401": 
        {
            "schema": 
            {
                "$ref": "#/definitions/Error"
            },

            "description": "未授权错误消息"
        }
    },

    "operationId": "getComments"
}