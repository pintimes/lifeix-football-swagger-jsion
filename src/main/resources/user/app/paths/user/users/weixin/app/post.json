{
	"summary": "app端微信用户注册/登录",
	"tags": 
	[
		"微信登录"
	],

	"description": "app端微信用户注册/登录，通过客户端传来的access_token和openid等参数获得用户信息，然后存入数据库并返回给客户端",

	"consumes": 
	[
		"application/x-www-form-urlencoded"
	],
	
	"produces": 
	[
		"application/json"
	],

	"parameters": 
	[
		{
            "$ref": "#/parameters/apiKeyHeader"
        },
		{
			"description": "设备编号:1:web;2:ios;3:android",
			"name": "device",
			"type": "integer",
			"format":"int32",
			"required": true,
			"in": "formData"
		},
		
		{
			"description": "设备id",
			"name": "deviceId",
			"type": "string",
			"required": true,
			"in": "formData"
		},

		{
			"description": "调用授权关系接口的调用凭证，2小时有效期",
			"name": "access_token",
			"type": "string",
			"required": true,
			"in": "formData"
		},
		
		{
			"description": "调用授权关系接口的调用凭证刷新凭证，30天有效期",
			"name": "refresh_token",
			"type": "string",
			"required": true,
			"in": "formData"
		},

		{
			"description": "用户在微信中的用户id",
			"name": "openid",
			"type": "string",
			"required": true,
			"in": "formData"
		},
		
		{
			"description": "跨平台的微信用户唯一id，唯一性高于openid",
			"name": "unionid",
			"type": "string",
			"required": true,
			"in": "formData"
		}
	],

	"responses": 
	{
		"200": 
		{
			"schema": 
			{
				"$ref": "#/definitions/User"
			},

			"description": "User对象"
		}
	},

	"operationId": "appWeixinRegisterLoginUser"
}