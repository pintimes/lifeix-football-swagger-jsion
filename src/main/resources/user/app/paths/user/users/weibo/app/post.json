{
	"summary": "app端微博用户注册/登录",
	"tags": 
	[
		"users"
	],

	"description": "微博用户注册/登录，通过前台传来的access_token和openId获得用户信息，然后存入数据库并返回给前台",
	"produces": 
	[
		"application/json"
	],

	"consumes": 
	[
		"application/x-www-form-urlencoded"
	],

	"parameters": 
	[
		{
			"description": "设备编号:1:web;2:ios;3:android",
			"name": "device",
			"type": "integer",
			"format":"int32",
			"required": true,
			"in": "formData"
		},
		
		{
			"description": "设备id",
			"name": "deviceId",
			"type": "string",
			"required": true,
			"in": "formData"
		},

		{
			"description": "调用授权关系接口的调用凭证，2小时有效期",
			"name": "access_token",
			"type": "string",
			"required": true,
			"in": "formData"
		},
		
		{
			"description": "调用授权关系接口的调用凭证刷新凭证，30天有效期",
			"name": "refresh_token",
			"type": "string",
			"required": true,
			"in": "formData"
		},
		
		{
			"description": "微博用户唯一id",
			"name": "uid",
			"type": "string",
			"required": true,
			"in": "formData"
		}
	],

	"responses": 
	{
		"200": 
		{
			"schema": 
			{
				"$ref": "#/definitions/User"
			},

			"description": "User对象"
		}
	},

	"operationId": "appWeiboRegisterLoginUser"
}