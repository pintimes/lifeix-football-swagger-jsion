{
    "summary": "获得置顶资讯列表",
    "tags": 
    [
        "WemediaTop"
    ],

	"consumes": 
    [
        "application/x-www-form-urlencoded"
    ],
    
    "produces": 
    [
        "application/json; charset=UTF-8"
    ],
	
    "description": "根据类目id列表获得类目下的置顶资讯列表",
    "parameters": 
    [
        {
            "$ref": "#/parameters/apiKeyYHeader"
        },

        {
            "description": "类目列表",
            "name": "categoryIds",
            "type": "array",
            "items": 
            {
                "type": "string"
            },

            "required": true,
            "in": "query"
        },
        
        {
            "description": "返回记录数限制",
            "name": "limit",
            "type": "integer",
            "format":"int32",
            "required": false,
            "default":9,
            "in": "query"
        }
    ],

    "responses": 
    {
        "200": 
        {
            "schema": 
            {
                "type": "array",
                "items": 
                {
                    "$ref": "#/definitions/Post"
                }
            },

            "description": "置顶资讯(包含链接对象linkMap)列表"
        }
    },

    "operationId": "getTops"
}