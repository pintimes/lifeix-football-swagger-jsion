{
	"summary": "获得文件分页列表",
    "tags": 
    [
       "Wemediafile"
    ],

	"consumes": 
    [
        "application/x-www-form-urlencoded"
    ],
    
    "produces": 
    [
        "application/json; charset=UTF-8"
    ],
    
    "description": "根据搜索条件获取文件分页列表",
    "parameters": 
	[
        {
            "$ref": "#/parameters/apiKeyHeader"
        },

        {
            "description": "文件状态",
            "name": "status",
            "type": "integer",
            "format":"int32",
            "required": false,
            "in": "query"
        },

        {
            "description": "菜单id",
            "name": "menuId",
            "type": "string",
            "required": false,
            "in": "query"
        },

        {
            "description": "类目id",
            "name": "categoryId",
            "type": "string",
            "required": false,
            "in": "query"
        },

        {
            "description": "作者id",
            "name": "authorId",
            "type": "string",
            "required": false,
            "in": "query"
        },

        {
            "description": "查询开始时间，格式yyyy-MM-dd'T'HH:mm:ss.SSSXXX",
            "name": "startTime",
            "type": "string",
            "format":"date-time",
            "required": false,
            "in": "query"
        },

        {
            "description": "查询结束时间，格式yyyy-MM-dd'T'HH:mm:ss.SSSXXX",
            "name": "endTime",
            "type": "string",
            "format":"date-time",
            "required": false,
            "in": "query"
        },

        {
            "description": "页号",
            "name": "page",
            "type": "integer",
            "format": "int32",
            "required": false,
            "default":1,
            "in": "query"
        },
        
        {
            "description": "每页记录数",
            "name": "rows",
            "type": "integer",
            "format": "int32",
            "required": false,
            "default":20,
            "in": "query"
        },
        
        {
            "description": "按照某个字段排序",
            "name": "orderBy",
            "type": "string",
            "required": false,
            "default":"createTime",
            "in": "query"
        },

        {
            "description": "倒序/正序",
            "name": "order",
            "type": "string",
            "required": false,
            "default":"desc",
            "in": "query"
        },

        {
            "description": "标题（支持模糊查询）",
            "name": "title",
            "type": "string",
            "required": false,
            "in": "query"
        },

        {
            "description": "文件类型，如图片、视频、音频等",
            "name": "type",
            "type": "string",
            "required": false,
            "in": "query"
        },

        {
            "description": "文件格式，如jpg、mp4等",
            "name": "format",
            "type": "string",
            "required": false,
            "in": "query"
        },

        {
            "description": "文件最小尺寸（占用磁盘空间），string类型，例如：10m，服务器会自动解析",
            "name": "minSize",
            "type": "string",
            "required": false,
            "in": "query"
        },

        {
            "description": "文件最大尺寸（占用磁盘空间）",
            "name": "maxSize",
            "type": "string",
            "required": false,
            "in": "query"
        }
    ],

    "responses": 
    {
        "200": 
        {
            "schema": 
            {
                "$ref": "#/definitions/Page",
                "items": 
                {
                    "$ref": "#/definitions/file"
                }
            },

            "description": "file页面"
        }
    },

    "operationId": "searchPage"
}