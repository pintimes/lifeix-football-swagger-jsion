{
    "summary": "搜索Post",
    "tags": 
    [
       "WemediaPost"
    ],

	"consumes": 
    [
        "application/x-www-form-urlencoded"
    ],
    
    "produces": 
    [
        "application/json; charset=UTF-8"
    ],
    
    "description": "根据搜索条件获取Post列表，每次搜索不能超过30条",
    "parameters": 
    [
        {
            "$ref": "#/parameters/apiKeyHeader"
        },

        {
            "description": "类目id",
            "name": "categoryId",
            "type": "string",
            "required": false,
            "in": "query"
        },

        {
            "description": "作者id",
            "name": "authorId",
            "type": "string",
            "required": false,
            "in": "query"
        },

        {
            "description": "查询开始时间，格式yyyy-MM-dd'T'HH:mm:ss.SSSXXX",
            "name": "startDate",
            "type": "string",
            "format":"date-time",
            "required": false,
            "in": "query"
        },

        {
            "description": "查询结束时间，格式yyyy-MM-dd'T'HH:mm:ss.SSSXXX",
            "name": "endDate",
            "type": "string",
            "format":"date-time",
            "required": false,
            "in": "query"
        },

        {
            "description": "每页显示的数据条数",
            "name": "limit",
            "format": "int32",
            "type": "integer",
            "required": false,
            "default":10,
            "in": "query"
        },

        {
            "description": "按照某个字段排序",
            "name": "orderBy",
            "type": "string",
            "required": false,
            "default":"createTime",
            "in": "query"
        },

        {
            "description": "是否倒序排列",
            "name": "isDesc",
            "type": "boolean",
            "required": false,
            "default":true,
            "in": "query"
        }
    ],

    "responses": 
    {
        "200": 
        {
            "schema": 
            {
                "type": "array",
                "items": 
                {
                    "$ref": "#/definitions/Post"
                }
            },

            "description": "Post列表"
        }
    },

    "operationId": "search"
}